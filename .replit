modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MkDocs Server"

[[workflows.workflow]]
name = "MkDocs Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdocs serve -a 0.0.0.0:5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "static"
build = ["mkdocs", "build"]
publicDir = "site"
